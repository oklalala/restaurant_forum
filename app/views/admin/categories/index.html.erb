<div class="container">
  <h1>餐廳分類總表</h1>
  <div>
    <%= link_to 'Restaurant', admin_restaurants_path %> |
    <%= link_to 'Categories', admin_categories_path %>
  </div>
  <br>
  <div class="form-inline" >
    <%= form_for [:admin, @category] do |f| %>
      <div class="form-group">
        <%= f.text_field :name, placeholder: "Category Name",  class: "form-control" %>
      </div>
      <%= f.submit class: "btn btn-primary" %>
      <% if @category.errors.any? %>
        <%= @category.errors.full_messages.to_sentence %>
      <% end %>
    <% end %>
  </div>
  <br>

  <div class="row">

    <div class="col-md-12">

      <table class="table table-striped table-bordered ">
        <thead>
          <tr>
            <th>#</th>
            <th>Category Name</th>
            <th>Edit | Delete</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
          <tr>
            <th scope="row"><%= category.id %></th>
            <td><%= category.name %></td>
            <span><td><%= link_to "",admin_categories_path(id: category.id),class: "glyphicon glyphicon-wrench" %>
               | <%= link_to "",admin_category_path(category), method: :delete, data: {confirm: "Are you sure?"}, class: "glyphicon glyphicon-trash" %></td></span>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>

  </div>
  
</div>