<div class="container">

  <h1>餐廳後台</h1>
  <div>
    <%= link_to 'Restaurant', admin_restaurants_path %> |
    <%= link_to 'Categories', admin_categories_path %>
  </div>

  <div class="row">

    <div class="col-md-12">

      <div>
        <%= link_to 'New Restaurant', new_admin_restaurant_path, class: "btn btn-primary" %>
      </div>
      <br>
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>ID</th>
            <th>Category</th>
            <th>Name</th>
            <th>show | edit | delete</th>
          </tr>
        </thead>
        <tbody>
          <% @restaurants.each do |restaurant| %>
          <tr>
            <th scope="row"><%= restaurant.id %></th>
            <td>[<%= restaurant.category.name %>]</td>
            <td><%= restaurant.name %></td>
            <td>
              <span><%= link_to '   ', admin_restaurant_path(restaurant), class: "glyphicon glyphicon-folder-open" %></span>  | 
              <span><%= link_to '', edit_admin_restaurant_path(restaurant),class: "glyphicon glyphicon-wrench" %></span>   |
              <span><%= link_to '   ', admin_restaurant_path(restaurant), method: :delete, data: { confirm: "Are you sure?"}, class: "glyphicon glyphicon-trash" %></span>

            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <div class="text-center">
        <%= paginate @restaurants %>
      </div>

    </div>

  </div>
</div>