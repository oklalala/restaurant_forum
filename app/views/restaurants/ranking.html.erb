<%= render partial: "shared/index_nav" %>

<br>

<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">

      <div class="panel-heading">
        <h3 class="panel-title">TOP 10 人氣餐廳</h3>
      </div>

      <div class="panel-body">
        <% @top_restaurants.each do |restaurant| %>
        <div>
          <div class="avatar">
            <%= image_tag restaurant.image, class: "img-responsive" %>
            <% #image_tag @user.avatar, class: "img-responsive img-circle"%>
          </div>
          <h2><%= link_to "#{restaurant.name}", restaurant_path(restaurant) %> <span>收藏數：<%= "#{restaurant.favorites_count}"%></span class= "btn btn-default" ></h2>
          <br>
          <h5><%= restaurant.description %></h5>
          <br>
          <%= link_to "Show", restaurant_path(restaurant), class: "btn btn-primary" %>
          <%= render partial: "shared/favorite", locals: {restaurant: restaurant} %>
          <%= render partial: "shared/like", locals: {restaurant: restaurant} %>
          <hr>
        </div>
        <div class="clearfix"></div>
        <% end %>
      </div>


    </div>
    
  </div>
</div>



