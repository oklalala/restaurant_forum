<div class="container">
  <div class="row">

    <h1>Edit Profile</h1>
    
    <%= form_for current_user do |f|%>
      <div class="form-group">
        <%= f.label :name, "Name"%>
        <%= f.text_field :name , class: "form-control"%>
      </div>

      <div class="form-group">
        <%= f.label :intro, "自我介紹"%>
        <%= f.text_field :intro , class: "form-control"%>
      </div>

      <div class="form-group">
        <%= f.label :avatar, "大頭照上傳" %>
        <%= image_tag current_user.avatar, width: '200px' if current_user.avatar? %>
        <%= f.file_field :avatar %>
      </div>

      <div class="form-group">  
        <%= f.submit class: "btn btn-primary"%>
      </div>  
    <% end %>

  </div>
</div>
